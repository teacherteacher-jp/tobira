<% content_for(:title, "招待の管理") %>

<h2 class="text-2xl font-bold text-center px-3 mb-3">
  招待の作成
</h2>

<%= form_with(model: @new_invitation, url: invitations_path, method: :post, class: "mb-10 px-3") do |form| %>
  <p class="mb-2">
    <%= form.text_field(:invitee_name, placeholder: "招待する相手の呼び名", class: "w-full") %>
  </p>
  <p class="mb-2">
    <%= form.select(:role_id, Role.usable.map { |role| [role.name, role.id] }, {}, class: "w-full") %>
  </p>
  <p>
    <%= form.submit("作成する", class: "w-full text-center p-2 bg-blue-500 text-white rounded-sm hover:bg-blue-700 cursor-pointer") %>
  </p>
<% end %>

<h2 class="text-2xl font-bold text-center px-3 mb-3">
  招待の一覧
</h2>

<p class="text-center px-3 mb-3">
  <%= link_to("使用済みの招待", invitations_already_used_path, class: "text-blue-500 hover:text-blue-700") %>
</p>

<ul class="px-3">
  <%= render(partial: "invitations/single", collection: @invitations, as: :invitation) %>
</ul>
